@model List<SWP391_MiniStore.Models.Domain.StoreStaff>
@{
    ViewData["Title"] = "StaffList";
}

<div class="mb-3">
    <a href="/StaffManagement/Add" class="btn btn-primary">Add Staff</a>
</div>

<div class="col-12">
    <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-black text-capitalize ps-3">Staff List</h6>
            </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Dob</th>
                            <th scope="col">StaffRole</th>
                            <th scope="col">StaffStatus</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model)
                        {
                            <tr>
                                <td>@staff.Username</td>
                                <td>@staff.Email</td>
                                <td>
                                    @if (staff.Dob.HasValue)
                                        @staff.Dob.Value.ToString("dd-MM-yyyy")




                                    </td>
                                    <td>@staff.StaffRole</td>
                                    <td>@(staff.StaffStatus == true ? "Available" : "On Break")</td>
                                <td><a class="btn btn-sm btn-primary" href="/StaffManagement/View/@staff.StaffID">View</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>