            @Html.DisplayFor(model => model.HourlyRate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StaffStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StaffStatus)
        </dd>
    </dl>
